.s-header-wrapper

    .s-static-header
        display table
        width $site_width
        margin: auto
        padding 2em 0

        .s-site-info
        .s-header-nav
        .s-time-wrapper
            display table-cell
            vertical-align middle
            padding .5em 0

        .s-site-info
            padding-right 1em

            .s-site-logo
                font-size 0
                line-height 0

                img
                    width 150px

            //.s-site-name

        .s-header-nav
            margin 0
            text-align center

            ul
                margin 0

            .s-nav-item
                margin .1em 1em .1em 0
                display inline-block
                vertical-align top
                font-size (16/14)em

                a
                    display inline-block
                    padding .25em
                    text-decoration none
                    background transparent
                    transition background 200ms ease-in-out
                    border-bottom 2px solid transparent

                &.is-active
                &:hover
                    a
                        border-color $blue

        .s-time-wrapper
            text-align right
            white-space nowrap

            .s-label-wrapper
                margin 0 0 5px
                font-size (11/14)em
                text-transform uppercase

            .s-phone-wrapper
                font-size (24/14)em

    .s-fixed-container
        box-shadow 0 0 4px rgba(0,0,0,.1), 0 2px 2px rgba(0,0,0,.05)

        &.is-fixed
            position fixed
            top 0
            left 0
            width 100%
            background #fff
            z-index 1

        .s-fixed-header
            $_bottom_header_height = 40px
            display table
            width $site_width
            margin: auto
            box-sizing border-box
            background rgba(255,255,255,.8)

            .s-column
                display table-cell
                vertical-align middle
                //width 33%

                &.right
                    text-align right

            .s-search-wrapper
                position relative
                width 100%
                height $_bottom_header_height
                z-index 1

                .s-text-input
                .s-submit-input
                    display block
                    border 0

                .s-text-input
                    padding 6px 6px 6px $_bottom_header_height
                    width 100%
                    height $_bottom_header_height
                    background #fff
                    border 1px solid rgba(127,127,127,.1)
                    border-radius 3px
                    transition all 333ms ease-in-out

                    &:focus
                        width 200%
                        border-color rgba(127,127,127,.5)

                .s-submit-input
                    position absolute
                    top 0
                    left 0
                    width $_bottom_header_height
                    height 100%
                    background transparent url("../img/icons/search-icon.png") 50% no-repeat
                    background-size $_bottom_header_height * .5
                    opacity .33
                    box-shadow none

            .s-info-wrapper
                position relative
                display inline-block
                vertical-align top
                margin 0 0 0 .5em

                .s-info-block
                    display table
                    padding 1em

                    .s-image-wrapper
                    .s-text-wrapper
                        display table-cell
                        vertical-align middle
                        height $_bottom_header_height

                    .s-image-wrapper
                        .s-image
                            display inline-block
                            width 28px
                            height 28px
                            background transparent 50% no-repeat
                            box-shadow: 0 0 2px rgba(0,0,0,.1);
                            border-radius 50%

                    .s-text-wrapper
                        padding 0 0 0 .75em
                        white-space nowrap
                        text-align center

                        .s-header
                            font-weight bold

                        .s-text
                            margin 4px 0 0
                            font-size (12/14)em
                            color #888

                .s-link
                    display block
                    position absolute
                    top: 0
                    left 0
                    width 100%
                    height 100%
                    cursor pointer

                    &:hover
                        background $blue
                        opacity .05

                &.s-user-account
                    .s-info-block
                        .s-image-wrapper
                            .s-image
                                background-image url("../img/icons/user-icon.png")
                                background-size 28px

                &.s-cart-wrapper
                    &.is-empty
                        .s-info-block
                            .s-image-wrapper
                                .s-cart-count
                                    display none
                            .s-text-wrapper
                                .s-text
                                    display none

                    .s-info-block
                        .s-image-wrapper
                            position relative
                            top 2px

                            .s-image
                                background-image url("../img/icons/cart-icon.png")
                                background-size 28px

                            .s-cart-count
                                position absolute
                                top -2px
                                right -4px
                                padding 2px 4px

                                background red
                                border-radius 50%
                                text-align center

                                font-size (10/14)em
                                color #fff

                &.s-compare-wrapper
                    &.is-empty
                        display none

                    .s-info-block
                        .s-image-wrapper
                            position relative
                            top 2px

                            .s-image
                                background-image url("../img/icons/compare-icon.png")
                                background-size 28px

                            .s-compare-count
                                position absolute
                                top -2px
                                right -4px
                                padding 2px 4px

                                background red
                                border-radius 50%
                                text-align center

                                font-size (10/14)em
                                color #fff