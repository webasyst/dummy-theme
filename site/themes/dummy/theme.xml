<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE theme PUBLIC "wa-app-theme" "http://www.webasyst.com/wa-content/xml/wa-app-theme.dtd">
<theme id="dummy" app="site" vendor="webasyst" author="webasyst" version="0.1.1">
    <name locale="en_US">Dummy Theme</name>
    <name locale="ru_RU">Тема "Манекен"</name>
    <files>
        <file path="breadcrumbs.html">
            <description locale="en_US">Breadcrumbs</description>
            <description locale="ru_RU">Хлебные крошки</description>
        </file>
        <file path="error.html">
            <description locale="en_US">Error page</description>
            <description locale="ru_RU">Страница ошибок</description>
        </file>
        <file path="footer.html">
            <description locale="en_US">Footer</description>
            <description locale="ru_RU">Футер</description>
        </file>
        <file path="forgotpassword.html">
            <description locale="en_US">Forgot password</description>
            <description locale="ru_RU">Страница восстановления пароля</description>
        </file>
        <file path="head.html">
            <description locale="en_US">Site head</description>
            <description locale="ru_RU">Ресурсы сайта</description>
        </file>
        <file path="header.html">
            <description locale="en_US">Site header</description>
            <description locale="ru_RU">Шапка сайта</description>
        </file>
        <file path="index.html">
            <description locale="en_US">Index</description>
            <description locale="ru_RU">Индексная страница</description>
        </file>
        <file path="login.html">
            <description locale="en_US">Login page</description>
            <description locale="ru_RU">Страница логина</description>
        </file>
        <file path="main.html">
            <description locale="en_US">Main content</description>
            <description locale="ru_RU">Главный контент сайта</description>
        </file>
        <file path="my.profile.html">
            <description locale="en_US">Profile page</description>
            <description locale="ru_RU">Страница профиля</description>
        </file>
        <file path="page.html">
            <description locale="en_US">Page</description>
            <description locale="ru_RU">Страница статьи</description>
        </file>
        <file path="page.welcome.html">
            <description locale="en_US">Welcome page content</description>
            <description locale="ru_RU">Контент страницы приветствия</description>
        </file>
        <file path="sidebar.html">
            <description locale="en_US">Sidebar</description>
            <description locale="ru_RU">Сайдбар</description>
        </file>
        <file path="signup.html">
            <description locale="en_US">Sign up</description>
            <description locale="ru_RU">Страница регистрации</description>
        </file>
        <file path="css/dummy.css">
        </file>
        <file path="js/dummy.js">
        </file>
    </files>
    <settings>
        <setting var="logo" control_type="image">
            <value>img/logo.png</value>
            <filename>img/logo.*</filename>
            <name locale="en_US">Logo</name>
            <name locale="ru_RU">Логотип</name>
        </setting>
        <setting var="pagination" control_type="select">
            <value>lazyloading</value>
            <name locale="en_US">Long lists display</name>
            <name locale="ru_RU">Длинные списки</name>
            <options>
                <option value="lazyloading">
                    <name locale="ru_RU">Lazy loading: автоматическая подгрузка при скролле</name>
                    <name locale="en_US">Lazy loading: auto load on scroll</name>
                </option>
                <option value="paging">
                    <name locale="ru_RU">1 2 3 4: Постраничная навигация</name>
                    <name locale="en_US">1 2 3 4: Paginated lists</name>
                </option>
            </options>
        </setting>
        <setting var="additional_styles" control_type="text">
            <value>a { color: #036; }</value>
            <name locale="en_US">Additional styles (inline css)</name>
            <name locale="ru_RU">Дополнительные стили (inline css)</name>
        </setting>
    </settings>
</theme>


