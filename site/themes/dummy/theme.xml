            <description locale="en_US">Sign up</description>
            <description locale="ru_RU">Страница регистрации</description>
        </file>
        <file path="css/dummy.css">
            <description locale="en_US">Core CSS file</description>
            <description locale="ru_RU">Основной файл CSS-стилей</description>
        </file>
        <file path="js/dummy.js">
        </file>
    </files>
    <settings>
        <setting var="logo" control_type="image">
            <value>img/logo.png</value>
            <filename>img/logo.*</filename>
            <name locale="en_US">Logo</name>
            <name locale="ru_RU">Логотип</name>
        </setting>
        <setting var="pagination" control_type="select">
            <value>lazyloading</value>
            <name locale="en_US">Long lists display</name>
            <name locale="ru_RU">Длинные списки</name>
            <options>
                <option value="lazyloading">
                    <name locale="ru_RU">Lazy loading: автоматическая подгрузка при скролле</name>
                    <name locale="en_US">Lazy loading: auto load on scroll</name>
                </option>
                <option value="paging">
                    <name locale="ru_RU">1 2 3 4: Постраничная навигация</name>
                    <name locale="en_US">1 2 3 4: Paginated lists</name>
                </option>
            </options>
        </setting>
        <setting var="additional_styles" control_type="text">
            <value>a { color: #036; }</value>
            <name locale="en_US">Additional styles (inline css)</name>
            <name locale="ru_RU">Дополнительные стили (inline css)</name>
        </setting>
        <setting var="use_shop_schedule" control_type="checkbox">
            <value>1</value>
            <name locale="ru_RU">Показывать график работы магазина на текущую неделю из настроек Shop-Script</name>
            <name locale="en_US">Show online store’s working schedule for current week from Shop-Script settings</name>
            <description locale="ru_RU">При включении игнорируется настройка «Сокращенный график работы».</description>
            <description locale="en_US">When enabled, “Brief working schedule” setting is ignored.</description>
        </setting>
        <setting var="manual_schedule" control_type="text">
            <value></value>
            <name locale="ru_RU">Сокращенный график работы</name>
            <name locale="en_US">Brief working schedule</name>
            <description locale="ru_RU">Например: Пн—Сб 08:00–18:00</description>
            <description locale="en_US">Example: Mo—Sa 08:00–18:00</description>
        </setting>
    </settings>
    <requirements>
        <requirement property="app.installer" value=">=1.13" strict="true"></requirement><!-- 1.13 added support for gettext files for theme locale -->
    </requirements>
</theme>




