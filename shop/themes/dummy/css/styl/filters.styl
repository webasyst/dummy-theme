.s-category-filters
    margin: 2em 0 0

    .s-filter-group
        margin: 1em 0 0

        &:first-child
            margin-top: 0

        .s-filter-header
            margin: 0 0 1em

        .s-filter-list
            margin: 0.75em 0 0.75em  0.75em

            .s-filter-item
                display block
                margin: 0.5em 0

                &.filter-price-item
                    display block
                    width: 100%
                    margin: 0
                    text-align center
                    white-space nowrap

                    input[type="text"]
                        width: 30%
                        min-width 50px
                        padding: 0.25em 0.4em
                        margin 0 4px
                        vertical-align middle
                        text-align center

    .s-buttons-wrapper
        margin: 2em 0 0