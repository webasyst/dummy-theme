.s-badge-wrapper
    position absolute
    top 1em
    right 1em

    .badge
        display inline-block
        padding .5em
        background green
        color #fff

        overflow hidden
        border-radius 2px
        $shadow()

        &.new
            background green

        &.hit
            background red

        &.bestseller
            background blue

        &.low-price
            background orange

.s-lazyloading-paging
    ul
        text-align center

        li
            display inline-block
            vertical-align baseline
            margin: 0 0.25rem

            a
                display block
                padding: 0.25rem
                min-width 2rem
                box-sizing border-box
                border-radius 50%

                background #f0f0f0
                text-decoration none
                text-align: center
                cursor pointer

            &.selected
                a
                    background transparent
                    cursor default